{
    "openapi": "3.0.0",
    "info": {
        "title": "BNMM - Información pública",
        "version": "1.0.1",
        "description": "Esquema OpenAPI para el asistente Georgie de la Biblioteca Nacional Mariano Moreno. Proporciona información pública sobre horarios, servicios, catálogo, contacto y actividades culturales."
    },
    "paths": {
        "/servicios": {
            "get": {
                "summary": "Horarios y servicios",
                "description": "Devuelve los horarios de atención y los servicios disponibles para el público.",
                "responses": {
                    "200": {
                        "description": "Enlace a la sección de horarios y servicios.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "URL": "https://www.bn.gov.ar/servicios/horarios"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/catalogo": {
            "get": {
                "summary": "Catálogo en línea",
                "description": "Devuelve el enlace al catálogo OPAC de la Biblioteca Nacional Mariano Moreno.",
                "responses": {
                    "200": {
                        "description": "Enlace al catálogo OPAC.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "URL": "https://catalogo.bn.gov.ar"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/contacto": {
            "get": {
                "summary": "Contacto institucional",
                "description": "Devuelve el correo electrónico de contacto institucional.",
                "responses": {
                    "200": {
                        "description": "Correo de contacto institucional.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "email": "contactoweb@bn.gob.ar"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/actividades": {
            "get": {
                "summary": "Actividades culturales y exposiciones",
                "description": "Devuelve el enlace a la sección de actividades culturales y exposiciones vigentes.",
                "responses": {
                    "200": {
                        "description": "Enlace a la agenda cultural.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "URL": "https://www.bn.gov.ar/agenda"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
